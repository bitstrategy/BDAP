@{
    Layout = null;
}

@model YYBDAP.ViewModel.LoginErrorViewModel
//同步测试哦
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@Framework.Common.Helper.ConfigHelper.GetAppSetting("PlatformName")</title>
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link rel="stylesheet" href="~/Content/login.css" />
</head>
<body>
    <div id="container">
        <div id="bd">
            <form id="formLogin" action="~/Authentication/DoLogin" method="post">
                <div class="login">
                    <div class="login-top"><h1 class="logotxt">@Framework.Common.Helper.ConfigHelper.GetAppSetting("PlatformName")</h1></div>
                    <div class="login-input">
                        <p class="user ue-clear">
                            <label>用户名</label>
                            <input type="text" id="txtUserName" name="UserName" value="@Model.UserName" />
                        </p>
                        <p class="password ue-clear">
                            <label>密&nbsp;&nbsp;&nbsp;码</label>
                            <input type="password" id="txtUserPwd" name="Password" />
                        </p>
                    </div>
                    <div class="login-btn ue-clear">
                        <a class="btn" id="btnLogin" href="javascript:LoginSubmit();">登录</a>
                        <div class="remember ue-clear">
                            @*<input type="checkbox" id="chkRemember" />
                            <em></em>
                            <label for="chkRemember">记住账号</label>*@
                            <label onclick="javascript: document.location.href='../Manage/User/ChangePwd'">修改密码</label>
                        </div>
                        <br />
                        <div><span id="lblErrorMsg" style="color:red; margin-left:-110px;">@Model.ErrorMsg</span></div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div id="ft">Copyright&nbsp;@DateTime.Now.Year&nbsp;&nbsp;版权所有&nbsp;&nbsp;@Framework.Common.Helper.ConfigHelper.GetAppSetting("PlatformName")</div>

    <script type="text/javascript">
        var height = $(window).height();
        $("#container").height(height);
        $("#bd").css("padding-top", height / 2 - $("#bd").height() / 2);

        $(window).resize(function () {
            var height = $(window).height();
            $("#bd").css("padding-top", $(window).height() / 2 - $("#bd").height() / 2);
            $("#container").height(height);

        });

        //$('#chkRemember').focus(function () {
        //    $(this).blur();
        //});

        //$('#chkRemember').click(function (e) {
        //    checkRemember($(this));
        //});

        //function checkRemember($this) {
        //    if (!-[1, ]) {
        //        if ($this.prop("checked")) {
        //            $this.parent().addClass('checked');
        //        } else {
        //            $this.parent().removeClass('checked');
        //        }
        //    }
        //}

        $(function () {
            document.onkeydown = function (e) {
                var ev = document.all ? window.event : e;
                if (ev.keyCode == 13) {
                    LoginSubmit();
                }
            }

            $("#txtUserName").focus();
        })

        function LoginSubmit() {
            var userName = $("#txtUserName").val();
            var userPwd = $("#txtUserPwd").val();
            if (userName.trim() != "" && userPwd != "") {
                $("#formLogin").submit();
            } else {
                alert("请输入账号和密码！");
            }
        }
    </script>
</body>
</html>
